{
	"extends": [
		"stylelint-config-standard",
		"stylelint-order-config-standard"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		
		"indentation": [
			"tab"
		],
		"react/no-unknown-property" : [
			2,
			{
				"ignore": ["jsx", "global"],
			}
		],
		"color-hex-case": "upper",
		"selector-class-pattern": "^.*$",
		"declaration-block-no-redundant-longhand-properties": [
			true,
			{
				"ignoreShorthands": [
					"/grid/"
				]
			}
		]
	}
}